<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.cubeservices.livescoresapp.FootballFixtureSlideFragment"
    android:background="@drawable/sky">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/grass">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fixtures"
            android:id="@+id/title"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="false"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:id="@+id/textView6"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/homeGoals"
            android:layout_alignTop="@+id/homeTeam"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Team"
            android:id="@+id/homeTeam"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_above="@+id/awayTeam"
            android:layout_alignStart="@+id/awayTeam"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Away Team"
            android:id="@+id/awayTeam"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="#FFF"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Goals"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:id="@+id/homeGoals"
            android:padding="5dp"
            android:layout_above="@+id/awayTeam"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Away Goals"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:id="@+id/awayGoals"
            android:padding="5dp"
            android:layout_alignTop="@+id/awayTeam"
            android:layout_alignEnd="@+id/homeGoals"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/status"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:gravity="center_vertical"
            android:layout_below="@+id/title"
            android:layout_alignStart="@+id/homeTeam"
            android:layout_above="@+id/homeTeam" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/leftButton"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_chevron_left"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/rightButton"
            android:layout_alignTop="@+id/leftButton"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_chevron_right"
            />
    </RelativeLayout>
</RelativeLayout>
